{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  // prevent error `error TS5055: Cannot write file '...' because it would overwrite input file.` use include 'src', this way we prevent include dist folder
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src", "../frontend-react/src/hooks"
  ]
}